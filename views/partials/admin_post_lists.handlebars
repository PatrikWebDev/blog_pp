<button class="alert alert-primary" > <a href="/newPostView" target="_blank">New Post</a></button>
<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
                <th class="text-center">Title</th>
                <th class="text-center">Author</th>
                <th class="text-center">Date</th>
                <th class="text-center" >Operations</th>
            </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td class="text-center"> {{this.title}}</td>
            <td class="text-center"> {{this.author}}</td>
            <td class="text-center"> {{this.date}}</td>
            <form method="Post" action="/editPost">
            <input type="hidden" name="title" value="{{this.title}}">
            <input type="hidden" name="content" value="{{this.content}}">
            <input type="hidden" name="date" value="{{this.date}}">
            <input type="hidden" name="author" value="{{this.author}}">
            <td><button  class="alert alert-primary" type="submit">Edit</button></td>
            </form>
        </tr>
        {{/each}}
    </tbody>

</table>